<!---
Allowed states:
- IDLE
- PATROL
- SEEK

Allowed conditions:
- playerNear
- PLAYER_FAR
- idleTimeUp
-->

<fsm startState="PATROL">

  <state state="PATROL">
    <transition condition="playerNear" toState="SEEK" />
  </state>

  <state state="SEEK">
    <transition condition="playerFar" toState="IDLE" />
  </state>

  <state state="IDLE">
    <transition condition="playerNear" toState="SEEK" />
    <transition condition="idleTimeUp" toState="PATROL" />
  </state>

</fsm>
